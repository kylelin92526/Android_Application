<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/calculator_button_view"
    android:columnCount="4"
    android:rowCount="5"
    >

    <Button
        android:id="@+id/bt_clear"
        android:layout_column="0"
        android:layout_row="0"
        android:text="AC"
        android:textSize="26sp"/>


    <Button
        android:id="@+id/bt_select_sign"
        android:layout_column="1"
        android:layout_row="0"
        android:text="+/-"
        android:textSize="26sp"/>
    <Button
        android:id="@+id/bt_percentage"
        android:layout_column="2"
        android:layout_row="0"
        android:text="%"
        android:textSize="26sp"/>

    <Button
        android:id="@+id/bt_delete"
        android:layout_column="3"
        android:layout_row="0"
        android:text="DEL"
        android:textSize="26sp"/>

    <Button
    android:id="@+id/bt_num1"
    android:layout_column="0"
    android:layout_row="1"
    android:text="1"
    android:textSize="26sp"/>

    <Button
    android:id="@+id/bt_num2"
    android:layout_column="1"
    android:layout_row="1"
    android:text="2"
    android:textSize="26sp"/>

    <Button
    android:id="@+id/bt_num3"
    android:layout_column="2"
    android:layout_row="1"
    android:text="3"
    android:textSize="26sp"/>

    <Button
    android:id="@+id/bt_plus"
    android:layout_column="3"
    android:layout_row="1"
    android:text="+"
    android:textSize="26sp"/>

    <Button
    android:id="@+id/bt_num4"
    android:layout_column="0"
    android:layout_row="2"
    android:text="4"
    android:textSize="26sp" />

    <Button
    android:id="@+id/bt_num5"
    android:layout_column="1"
    android:layout_row="2"
    android:text="5"
    android:textSize="26sp"/>

    <Button
    android:id="@+id/bt_num6"
    android:layout_column="2"
    android:layout_row="2"
    android:text="6"
    android:textSize="26sp"/>

    <Button
    android:id="@+id/bt_minus"
    android:layout_column="3"
    android:layout_row="2"
    android:text="-"
    android:textSize="26sp" />

    <Button
    android:id="@+id/bt_num7"
    android:layout_column="0"
    android:layout_row="3"
    android:text="7"
    android:textSize="26sp"/>

    <Button
    android:id="@+id/bt_num8"
    android:layout_column="1"
    android:layout_row="3"
    android:text="8"
    android:textSize="26sp"/>

    <Button
    android:id="@+id/bt_num9"
    android:layout_column="2"
    android:layout_row="3"
    android:text="9"
    android:textSize="26sp" />

    <Button
    android:id="@+id/bt_mult"
    android:layout_column="3"
    android:layout_row="3"
    android:text="*"
    android:textSize="26sp" />

    <Button
    android:id="@+id/bt_dot"
    android:layout_column="0"
    android:layout_row="4"
    android:text="."
    android:textSize="26sp" />

    <Button
    android:id="@+id/bt_num0"
    android:layout_column="1"
    android:layout_row="4"
    android:text="0"
    android:textSize="26sp" />

    <Button
    android:id="@+id/bt_equal"
    android:layout_column="2"
    android:layout_row="4"
    android:text="="
    android:textSize="26sp" />

    <Button
    android:id="@+id/bt_div"
    android:layout_column="3"
    android:layout_row="4"
    android:text="/"
    android:textSize="26sp" />

</GridLayout>